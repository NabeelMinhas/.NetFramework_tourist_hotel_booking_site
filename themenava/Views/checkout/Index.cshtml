        <div class="colorlib-shop" style="padding-top:14rem">
            <h1 style="color:red;text-align:center ;">Check Out</h1>
            <div style="padding-top: 6rem" class="container">
                @using (Html.BeginForm("add_data", "checkout", FormMethod.Post, new { @class = "colorlib-form" }))
                {
                <h1 style="text-align: center;color: #7368FF">@ViewBag.title</h1>
                    <form method="post" class="colorlib-form">
                        <div class="row">
                            <div class="col-md-7">

                                <h2>Billing Details</h2>
                                <div class="row">

                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label for="fname">First Name</label>
                                            <input type="text" name="first_name" id="fname" class="form-control" placeholder="Your firstname" required>
                                            <input type="text" name="title" value="@ViewBag.title" hidden >
                                            <input type="text" name="price" value=@ViewBag.price  hidden >
                                        </div>
                                        <div class="col-md-6">
                                            <label for="lname">Last Name</label>
                                            <input type="text" name="last_name" id="lname" class="form-control" placeholder="Your lastname" required>
                                        </div>
                                    </div>


                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="companyname">Email</label>
                                            <input type="email" id="towncity" name="email_address" class="form-control" placeholder="enter your valid email" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label for="stateprovince">Phone no 1</label>
                                            <input type="text" name="phone_no_1" id="fname" class="form-control" placeholder="Phone no 1" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="lname">Phone no 2</label>
                                            <input type="text" id="zippostalcode" name="phone_no_2" class="form-control" placeholder="Phone no 2" required>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-6">
                                            <label for="email">Cnic no</label>
                                            <input type="text" id="email" name="cnic" class="form-control" placeholder="CNIC" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="Phone">Date Of arriving</label>
                                            <br>
                                            <input type="date" name="date" class="datepicker" data-date-format="mm/dd/yyyy" required>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <div class="col-md-5">
                                <div class="cart-detail">
                                    <h2>Bill For one day</h2>
                                    <ul>
                                        <li>
                                            <span>Bill Amount </span> <span>@ViewBag.price rupees</span>
                                            <ul>
                                            </ul>
                                        </li>

                                    </ul>
                                </div>


